<% provide(:title, "#{@car.name}, #{@car.year_of_release}") %>
<h5><%= "#{@car.name} #{@car.model}, #{@car.year_of_release}" %></h5>
<div class="row">
  <div class="span9">
    <% if @car.photos.any? %>
      <div class="fotorama" data-nav="thumbs" data-width="100%" data-max-width="640" data-max-hight="480" data-ratio="800/600" data-loop="true" data-thumb-width="100" data-thumb-height="75">
        <% for photo in @car.photos %>
          <%= link_to "", photo.image.url %>
        <% end %>
        </div>
    <% else %>
      <%= image_tag("default.png") %>
    <% end %>
  </div>
  <div class="span3">
    <%= "Цена          #{number_with_delimiter(@car.price.to_i, delimiter: " ")} руб." %><br />
    <%= "#{@car.name} #{@car.model}, #{@car.year_of_release} г." %>
    <%= "Пробег #{number_with_delimiter(@car.mileage.to_i, delimiter: " ")} км, #{@car.engine} #{@car.transmission}, #{@car.engine_type}, #{@car.body_type.mb_chars.downcase}, цвет #{@car.color.mb_chars.downcase}" %>
    <p><%= @car.describtion %> </p>
  </div>
</div>
