<div class="row-fluid">
  <div class="center-phone-div visible-phone">
    <span class="company-phone center-phone">
      <%= render 'layouts/phones' %>
    </span>
  </div>
  <span class="left-as">
    <div class="as-feedbacks visible-desktop">
      <%= render 'shared/as_feedbacks' %>
    </div>
    <div class="vkgroup-vidget-01 visible-desktop">
      <%= render 'shared/as_vkgroup_01' %>
    </div>
  </span>
  <span class="center-col">
    <div id="center-div">
      <div class="callback-btn visible-phone">
        <div id="btn-div">
          <button type="button" id="show-button" class="btn btn-flat" data-toggle="modal" data-target="#modal-callback">
            Заказать подбор автомобиля
          </button>
        </div>
        <div class="modal hide fade" id="modal-callback" aria-hidden="true">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&#x2715</button>
          <%= render 'as_callback' %>
        </div>
      </div>
      <div id="company-desk">
        <%= render 'as_company' %>
      </div>
      <div class="as-feedbacks visible-phone">
        <%= render 'shared/as_feedbacks' %>
      </div>
      <div class="right-teasercars visible-phone">
        <%= render 'right_teasercars' %>
      </div>
      <div class="vkgroup-vidget-03 visible-phone">
        <%= render 'shared/as_vkgroup_03' %>
      </div>
    </div>
  </span>
  <span class="right-as">
    <div id="right-col">
      <div class="as-callback" data-spy="affix" data-offset-top="97">
        <%= render 'as_callback' %>
      </div>
      <div class="right-teasercars hidden-phone">
        <%= render 'right_teasercars' %>
      </div>
      <div class="as-feedbacks visible-tablet">
        <%= render 'shared/as_feedbacks' %>
      </div>
      <div class='vkgroup-vidget-02 visible-tablet'>
        <%= render 'shared/as_vkgroup_02' %>
      </div>
    </div>
  </span>
</div>
