<div class="callback">
  <div class="callback-head">
    закажите подбор сейчас
  </div>
  <%= form_for(@client, :validate => true) do |f| %>
    <%= f.label :name, "Ваше имя" %>
    <%= f.text_field :name %>

    <%= f.label :phone, "Номер телефона" %>
    <%= f.telephone_field :phone %>

    <%= f.submit "Заказать подбор", class: "btn btn-flat" %>
  <% end %>
</div>
