<% provide(:title, "Войти") %>
<h3>Войти</h3>

<div class="row">
  <div class="sign-in">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name, "Логин" %>
      <%= f.text_field :name %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %><br />

      <%= f.submit "Войти", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
