<% provide(:title, "Войти") %>
<h2>Войти</h2>

<div class="row">
  <div class="span5 offset5">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name, "Логин" %>
      <%= f.text_field :name %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %><br />

      <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
