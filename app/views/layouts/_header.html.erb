              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-male"></i> <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Сменить пароль", edit_user_path(current_user) %></li>
                <li><%= link_to "Выйти", signout_path, method: "delete" %>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
