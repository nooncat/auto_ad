<header class="navbar navbar-static-top" data-spy="affix" data-offset-top="97">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a href="/" class="nav-logo">
        <span class="nav-logo-image"></span>
      </a>
      <div class="hidden-desktop phone-2">
        <span class="phone-company phone-navbar">
          <%= render 'layouts/phones' %>
        </span>
      </div>
      <div class="nav-collapse collapse">
        <ul class="nav pull-left">
          <li><%= link_to 'Рекомендуем', cars_path %></li>
          <li><%= link_to 'Отзывы', feedbacks_path %></li>
          <li><%= link_to 'Услуги', services_path %></li>
          <li><%= link_to 'Контакты', contacts_path %></li>
          <% if signed_in? %>
            <li><a href="/compose"> Объявление </a></li>
            <li>
              <%= link_to clients_path do %>
                Заявки-клиенты
                <% if @callbacks_new.any? %>
                  <blink>
                    <%= "(#{@callbacks_new.count})" %>
                  </blink>
                  <% end %>
              <% end %>
            </li>
            <% if current_user.admin? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Админка <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Создать пользователя", signup_path %></li>
                  <li><%= link_to "Все пользователи", users_path %></li>
                </ul>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.login %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Сменить пароль", edit_user_path(current_user) %></li>
                <li><%= link_to "выйти", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
      <span class="visible-desktop">
        <span class="phone-company phone-navbar phone-1">
          <%= render 'layouts/phones' %>
        </span>
      </span>
    </div>
  </div>
</header>
