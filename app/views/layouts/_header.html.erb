<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Ваше авто", root_path, id: "logo" %>
      <div class="nav-collapse collapse">
        <ul class="nav pull-right">
          <li><a href="/"><i class="icon-home"></i> Домой</a></li>
          <li><a href="/about"><i class="icon-info-sign"></i> Информация</a></li>
          <li><a href="/feedbacks"><i class="icon-thumbs-up"></i> Отзывы</a></li>
          <% if signed_in? %>
            <li><a href="/compose"><i class="icon-truck"></i> Объявление</a></li>
            <% if current_user.admin? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-group"></i> Пользователи <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Все пользователи", users_path %></li>
                  <li><%= link_to "Создать пользователя", signup_path %></li>
                </ul>
            <% end %>
