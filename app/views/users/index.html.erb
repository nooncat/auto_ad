<% provide(:title, 'Пользователи') %>
<h1>Пользователи</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%=  user.name %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "удалить", user, method: :delete,
                                data: {confirm: "Удалить?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
