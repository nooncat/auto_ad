<% provide(:title, "Смена пароля") %>
<h3>Смена пароля</h3>

<div class="row">
  <div class="user-edit">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= label_tag :current_password, "Текущий пароль" %>
      <%= password_field_tag :current_password, params[:current_password] %>
      
      <%= f.label :password, "Новый пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение" %>
      <%= f.password_field :password_confirmation %><br />
      
      <%= f.submit "Сохранить", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
