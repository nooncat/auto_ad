<% provide(:title, "Смена пароля") %>
<div class="other-head">
  смена пароля 
</div>

<div class="row-fluid">
  <div class="user-edit">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= label_tag :current_password, "Текущий пароль" %>
      <%= password_field_tag :current_password, params[:current_password] %>
      
      <%= f.label :password, "Новый пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение" %>
      <%= f.password_field :password_confirmation %><br />
      
      <%= f.submit "сохранить", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
