<% provide(:title, "Смена пароля") %>
<h2>Смена пароля</h2>

<div class="row">
  <div class="span5 offset4">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= label_tag :current_password, "Текущий пароль" %>
      <%= password_field_tag :current_password, params[:current_password] %>
      
      <%= f.label :password, "Новый пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение" %>
      <%= f.password_field :password_confirmation %><br />
      
      <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
